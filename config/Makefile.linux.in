include ../Makefile.config
@AUTODEPRULE_SUBDIR@

CXXFLAGS += -I@top_srcdir@

OBJS = \
cpumeter.o \
memmeter.o \
swapmeter.o \
pagemeter.o \
netmeter.o \
intmeter.o \
loadmeter.o \
btrymeter.o \
diskmeter.o \
raidmeter.o \
MeterMaker.o

ifeq (@host_cpu@, m68k)
# nothing else for m68k
else
OBJS += serialmeter.o
endif

CFILES := $(OBJS:.o=.cc)
DEPFILES := $(OBJS:%=.%.d)

vpath %.h $(TOP)
vpath %.cc $(TOP)

#-----------------------------------------------------------------------

all : libmeter.a @MEMSTAT@

MemStat:
	$(MAKE) -C memstat

clean :
	rm -f $(OBJS) $(DEPFILES) libmeter.a *~
	if test "@MEMSTAT@" = "MemStat"; then $(MAKE) -C memstat clean; fi

libmeter.a : $(OBJS)
	ar cvr libmeter.a $(OBJS)
	@RANLIB@ $@

@AUTODEPEND@
